<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

    android:background="#ff019875"
    android:id="@+id/cont">


    <TextView android:text="@string/meBuzz" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textIsSelectable="true"
        android:textSize="24dp"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buzz me!"
        android:id="@+id/btn"
      android:background="@drawable/shape"
        android:width="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:inputType="number"
        android:width="40dp"
        android:layout_marginBottom="100dp"
        android:layout_above="@+id/btn"
        android:layout_toLeftOf="@+id/btn"
        android:layout_toStartOf="@+id/btn"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seconds"
        android:id="@+id/buzzSec2"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignRight="@+id/btn"
        android:layout_alignEnd="@+id/btn"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer"
        android:id="@+id/timeBtn"
        android:background="@drawable/shape"
        android:width="5dp"
         />
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />


</RelativeLayout>
